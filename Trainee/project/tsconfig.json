{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./",
    "target": "es6",
    "module": "esnext",
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "preserve",
    "sourceMap": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@images/*": [
        "./src/assets/images/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@core/*": [
        "./src/core/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "globals.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
